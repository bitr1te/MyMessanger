                        Height="20" 
                        FontFamily="Constantia" 
                        FontSize="13"
                        Content="Обновить"
                        Background="#EDD89F"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="380"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBox 
                    Name="ChatBox"
                    Grid.Row="0"
                    Text="{Binding Chat}"
                    TextAlignment="Left"
                    IsReadOnly="True" 
                    Margin="3,3,3,3" FontFamily="Constantia" FontSize="16"
                    Background="#E6CAB4"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox
                        MaxLines="5"
                        Name="Message"
                        Text="{Binding Message}"
                        TextAlignment="Left"
                        TextWrapping="Wrap" 
                        Grid.Column="0" Height="18"
                        Background="#E6CAB4"/>
                    <Button Style="{DynamicResource ButtonStyle5}"
                        Name="SendButton"
                        Grid.Column="1"
                        Command="{Binding SendCommand}"
                        Content="Отправить"
                        FontFamily="Constantia" FontSize="12"
                        Background="#EDD89F"/>
                    <TextBox
                        MaxLines="5"
                        Name="NewNickBox"
                        TextAlignment="Left"
                        TextWrapping="Wrap" 
                        Grid.Column="2" Width="137" FontFamily="Constantia" FontSize="12" IsInactiveSelectionHighlightEnabled="True" Height="18" Background="#E6CAB4"/>
                    <Button
                        Name="OkNickButton"
                        Click="OkNickButton_Click"
                        Grid.Column="3"
                        Content="Ок" Margin="5,3,10,3" FontFamily="Constantia" FontSize="12" Width="74" Background="#EDD89F"/>
                    <Button Style="{DynamicResource ButtonStyle6}"

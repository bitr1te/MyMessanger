                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListView 
                    Grid.Row="0" 
                    Name="ChatList" 
                    ItemsSource="{Binding chats}"
                    SelectionChanged="ChatList_SelectionChanged" SelectedIndex="0"/>
                <StackPanel Orientation="Vertical" Grid.Row="1">
                    <TextBox 
                        Height="20"
                        Name="NewChatBox"
                        Background="#E6CAB4"/>
                    <Button Style="{DynamicResource ButtonStyle2}" 
                        Name="NewChatButton"
                        Content="Новый чат"
                        Click="NewChatButton_Click"
                        Height="20" 
                        FontFamily="Constantia" 
                        FontSize="13"
                            Background="#EDD89F"/>
                    <Button Style="{DynamicResource ButtonStyle3}" 
                        Name="ConfirmButton"
                        Content="Подтвердить"
                        Click="ConfirmButton_Click"
                        Height="20" 
                        FontFamily="Constantia" 
                        FontSize="13"
                        Background="#EDD89F"/>
                    <Button Style="{DynamicResource ButtonStyle4}"
